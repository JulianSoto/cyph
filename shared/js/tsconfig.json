{
	"angularCompilerOptions": {
		"disableTypeScriptVersionCheck": true,
		"fullTemplateTypeCheck": true,
		"preserveWhitespaces": false,
		"strictTemplates": true
	},
	"compileOnSave": true,
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["dom", "dom.iterable", "es2016", "scripthost"],
		"module": "es2015",
		"moduleResolution": "node",
		"newLine": "LF",
		"noEmitHelpers": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"paths": {
			"_stream_duplex": ["js/externals/_stream_duplex"],
			"_stream_writable": ["js/externals/_stream_writable"],
			"core-js/es6/*": ["../node_modules/core-js/es"],
			"core-js/es7/reflect": [
				"../node_modules/core-js/proposals/reflect-metadata"
			],
			"crypto": ["js/externals/crypto"],
			"faye-websocket": ["js/externals/faye-websocket"],
			/* "fs": ["js/externals/fs"], */
			"lodash/*": ["node_modules/@types/lodash-es/*"],
			"libsodium": ["js/externals/libsodium"],
			"request": ["js/externals/request"],
			"rsvp": ["js/externals/rsvp"],
			"stream": ["js/externals/stream"],
			"vm": ["js/externals/vm"]
		},
		"skipLibCheck": true,
		"sourceMap": false,
		"strict": true,
		"target": "es5"
	},
	"include": ["**/*.ts"]
}
