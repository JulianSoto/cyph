{
	"angularCompilerOptions": {
		"fullTemplateTypeCheck": true,
		"preserveWhitespaces": false,
		"strictTemplates": true
	},
	"compileOnSave": true,
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["dom", "dom.iterable", "es2016", "scripthost"],
		"module": "es2015",
		"moduleResolution": "node",
		"newLine": "LF",
		"noEmitHelpers": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"paths": {
			"_stream_duplex": ["js/externals/_stream_duplex"],
			"_stream_writable": ["js/externals/_stream_writable"],
			"core-js/es6/*": ["../node_modules/core-js/es"],
			"core-js/es7/reflect": [
				"../node_modules/core-js/proposals/reflect-metadata"
			],
			"crypto": ["js/externals/crypto"],
			"debug": ["js/externals/debug"],
			"faye-websocket": ["js/externals/faye-websocket"],
			/* "fs": ["js/externals/fs"], */
			"lodash/*": ["../node_modules/@types/lodash-es/*"],
			"libsodium": ["js/externals/libsodium"],
			"request": ["js/externals/request"],
			"rsvp": ["js/externals/rsvp"],
			"stream": ["js/externals/stream"],
			"vm": ["js/externals/vm"],

			/* Module not found: Error: Recursion in resolving */
			"@angular/cdk": ["../node_modules/@angular/cdk"],
			"@angular/material": ["../node_modules/@angular/material"],
			"@syncfusion/ej2-angular-base": [
				"../node_modules/@syncfusion/ej2-angular-base"
			],
			"@syncfusion/ej2-angular-schedule": [
				"../node_modules/@syncfusion/ej2-angular-schedule"
			],
			"@syncfusion/ej2-base": ["../node_modules/@syncfusion/ej2-base"],
			"asn1.js": ["../node_modules/asn1.js"],
			"base-x": ["../node_modules/base-x"],
			"bn.js": ["../node_modules/bn.js"],
			"browserify-des": ["../node_modules/browserify-des"],
			"browserify-rsa": ["../node_modules/browserify-rsa"],
			"cipher-base": ["../node_modules/cipher-base"],
			"create-hash": ["../node_modules/create-hash"],
			"des.js": ["../node_modules/des.js"],
			"elliptic": ["../node_modules/elliptic"],
			"events": ["../node_modules/events"],
			"evp_bytestokey": ["../node_modules/evp_bytestokey"],
			"form-data": ["../node_modules/form-data"],
			"hash-base": ["../node_modules/hash-base"],
			"hmac-drbg": ["../node_modules/hmac-drbg"],
			"inherits": ["../node_modules/inherits"],
			"md5.js": ["../node_modules/md5.js"],
			"miller-rabin": ["../node_modules/miller-rabin"],
			"minimalistic-assert": ["../node_modules/minimalistic-assert"],
			"ng-fullcalendar": ["../node_modules/ng-fullcalendar"],
			"object-assign": ["../node_modules/object-assign"],
			"parse-asn1": ["../node_modules/parse-asn1"],
			"process": ["../node_modules/process"],
			"punycode": ["../node_modules/punycode"],
			"querystring": ["../node_modules/querystring"],
			"quill": ["../node_modules/quill"],
			"ripemd160": ["../node_modules/ripemd160"],
			"safe-buffer": ["../node_modules/safe-buffer"],
			"sha.js": ["../node_modules/sha.js"],
			"string_decoder": ["../node_modules/string_decoder"],
			"url": ["../node_modules/url"],
			"util": ["../node_modules/util"],
			"whatwg-fetch": ["../node_modules/whatwg-fetch"]
		},
		"skipLibCheck": true,
		"sourceMap": false,
		"strict": true,
		"target": "es5"
	},
	"include": ["**/*.ts"]
}
